<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <AbsoluteLayout
        android:id="@+id/absoluteLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >




        
        <EditText
            android:id="@+id/etLoginUserName"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_x="142dp"
            android:layout_y="25dp" >

            <requestFocus />
        </EditText>


        <EditText
            android:id="@+id/etLoginPassword"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_x="144dp"
            android:layout_y="82dp" />

        <TextView
            android:id="@+id/ltusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="20dp"
            android:layout_y="31dp"
            android:text="UserName:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/ltpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="14dp"
            android:layout_y="90dp"
            android:text="Password:"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btnLoginback"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_x="56dp"
            android:layout_y="160dp"
            android:text="Back" />

        <Button
            android:id="@+id/btnLoginlogin"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_x="174dp"
            android:layout_y="161dp" 
            android:text="Login"/>

    </AbsoluteLayout>

</LinearLayout>